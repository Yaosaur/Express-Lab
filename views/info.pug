doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        style
            include style.css 
        title #{title}

    nav 
        span 
            a(href= "/") Home
        span
            a(href= `/aboutme`) About Me
        span
            a(href= `/inspiration`) Inspiration
        span
            a(href= `/special`) Special

    body 
    h1 #{header}
    p #{message}

    nav
        each item in  ['Flowers', 'Arrangements', 'Bonsais']
            span  
                a(href= `/${item}`) #{item}

